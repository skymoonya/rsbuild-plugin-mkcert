{
  "name": "rsbuild-plugin-mkcert",
  "version": "0.0.0",
  "description": "Provide certificates for rsbuild's https dev service",
  "repository": {
    "type": "git",
    "url": "https://github.com/skymoonya/rsbuild-plugin-mkcert.git"
  },
  "keywords": [
    "rsbuild-plugin",
    "certificate",
    "https",
    "mkcert"
  ],
  "author": "liuweigl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skymoonya/rsbuild-plugin-mkcert/issues"
  },
  "homepage": "https://github.com/skymoonya/rsbuild-plugin-mkcert#readme",
  "engines": {
    "node": ">=v16.7.0"
  },
  "packageManager": "pnpm@8.0.0+",
  "types": "./dist/index.d.ts",
  "module": "./dist/mkcert.mjs",
  "main": "./dist/mkcert.js",
  "files": [
    "plugin",
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/mkcert.mjs",
      "require": "./dist/mkcert.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "test": "pnpm build && rsbuild dev -c playground/rsbuild.config.ts",
    "build": "tsx ./script/build.mts",
    "lint": "tsc --noEmit && eslint \"plugin/**/*.ts\" --color --quiet",
    "release": "semantic-release"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.5",
    "debug": "^4.3.4",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.10.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "prettier": "^3.1.1",
    "semantic-release": "^22.0.12",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "@rsbuild/core": "^0.4.15"
  },
  "peerDependencies": {
    "@rsbuild/core": "*"
  }
}
